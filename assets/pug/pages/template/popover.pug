                      .card-header-right
                        ul.list-unstyled.card-option
                          li
                            i.fa-solid.fa-gear.fa-spin
                          li
                            i.view-html.fa-solid.fa-code
                          li
                            i.icofont.icofont-maximize.full-card
                          li
                            i.icofont.icofont-minus.minimize-card
                          li
                            i.icofont.icofont-refresh.reload-
                          li
                            i.icofont.icofont-error.close-card 
                    .card-body.common-flex.popover-wrapper
                      a.btn.btn-danger.popover-dismiss.text-white(tabindex='0' role='button' data-bs-toggle='popover' data-bs-trigger='focus', title='Dismissible Popover', data-tooltip='Dismissible Popover', data-bs-dismiss='true', data-bs-content="And here's some amazing content. It's very engaging. Right?") Dismissible Popover
                      .code-box-copy
                          button.code-box-copy__btn.btn-clipboard(data-clipboard-target='#dismiss-popover', title='Copy')
                            i.icofont.icofont-copy-alt
                          pre.custom-scrollbar
                            code.language-html#dismiss-popover
                              |&lt;a class="btn btn-danger popover-dismiss" tabindex="0" role="button" data-bs-toggle="popover" data-bs-trigger="focus" title="Dismissible Popover" data-tooltip="Dismissible Popover" data-bs-dismiss="true" data-bs-content="And here's some amazing content. It's very engaging. Right?"&gt;Dismissible Popover&lt;/a&gt;     
                div(class="col-span-12")
                  .card
                    .card-header
                      h5 Popover Offsets 
                      p.f-m-light.mt-1 
                        | Use
                        code  data-bs-offset="*,*"
                        |  through set popover offset. 
                      .card-header-right
                        ul.list-unstyled.card-option
                          li
                            i.fa-solid.fa-gear.fa-spin
                          li
                            i.view-html.fa-solid.fa-code
                          li
                            i.icofont.icofont-maximize.full-card
