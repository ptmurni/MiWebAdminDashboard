- var page_Title = 'Dropzone';
- var theme_customizer      = true;
- var dropzone              = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var scrollbar             = true;
- var filepond              = true;
- var height_equal          = true;

doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      include ../../components/header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          .container.w-full
            .page-title
              .grid.grid-cols-12.mx-2.items-center
                div(class="col-span-6 sm:col-span-12")
                  h3
                    | Dropzone
                div(class="col-span-6 sm:col-span-12")
                  ol.breadcrumb.flex.gap-2
                    li.breadcrumb-item
                      a(href='index.html')                                        
                        svg.stroke-icon
                          use(href='../assets/svg/icon-sprite.svg#stroke-home')
                    li.breadcrumb-item Bonus Ui
                    li.breadcrumb-item.active Dropzone
          // Container-fluid starts
          .container
            .grid.grid-cols-12.card-gap
              div(class="col-span-6 lg:col-span-12")
                .card
                  .card-header
                    h5 Default File Upload
                    p.f-m-light.mt-1
                      | We use the create method to turn a
                      code  &lt;input type="file"&gt;
                      |  into a filepond drop area.
                      code [https://pqina.nl/filepond/]
                  .card-body
                    input(type='file' class="no-preview")

              div(class="col-span-6 lg:col-span-12")
                .card
                  .card-header
                    h5 Image Preview 
                    p.f-m-light.mt-1
                      | We use the create method to turn a
                      code  &lt;input type="file"&gt;
                      |  into a filepond drop area.
                      code [https://pqina.nl/filepond/]
                  .card-body
                    input(type='file' class="show-preview")
              div(class="col-span-4 lg:col-span-12")
                .card
                  .card-header 
                    h5 Single File Upload
                    p.f-m-light.mt-1
                      | Use 
                      code dropzone 
                      |  class through create upload files and with that we can upload single file by doing 
                      code singleFileUpload 
                      | id.
                  .card-body
                    form#singleFileUpload.dropzone.dropzone-secondary(action='/upload.php')
                      .dropzone-wrapper
                        .dz-message.needsclick
                          i.fa-solid.fa-cloud-arrow-up.fa-fade
                          h6 Drop files here or click to upload.
                          span.note.needsclick
                            | (This is just a demo dropzone. Selected files are 
                            strong not
                            |  actually uploaded.)
              div(class="col-span-4 lg:col-span-12")
                .card
                  .card-header
                    h5 Multiple File Upload
                    p.f-m-light.mt-1
                      | Use 
                      code dropzone 
                      |  class through create upload files and with that we can upload multiple file by doing 
                      code multiFileUpload 
                      | id.
                  .card-body
                    form#multiFileUpload.dropzone.dropzone-secondary(action='/upload.php')
                      .dz-message.needsclick
                        i.fa-solid.fa-cloud-arrow-up.fa-fade
                        h6 Drop files here or click to upload.
                        span.note.needsclick
                          | (This is just a demo dropzone. Selected files are 
                          strong not
                          |  actually uploaded.)
              div(class="col-span-4 lg:col-span-12")
                .card
                  .card-header
                    h5 Images Dropzone with Effects
                    p.f-m-light.mt-1
                      | Use the 
                      code fileup
                      |  id and 
                      code dropzone 
                      | to create upload images.
                  .card-body.animated-dropfile
                    form(name='upload' method='post' action='#' enctype='multipart/form-data' accept-charset='utf-8')
                      .grid.grid-cols-12
                        div(class="col-span-12").col-md-offset-3.text-center
                          .btn-container
                            .imgupload.mb-2
                              i.fa.fa-file-image-o
                            .imgupload.ok
                              i.fa-solid.fa-check
                            .imgupload.stop
                              i.fa.fa-times
                            p#namefile.mb-4 Only pics allowed! (jpg,jpeg,bmp,png)
                            button#btnup.btn.btn-primary.leading-5.text-white.d-full(type='button') Search for your photo!
                            input#fileup(type='file' name='fileup')

          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
