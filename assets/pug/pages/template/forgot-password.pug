- var page_Title = 'Forgot Password';
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    .page-wrapper
      .container
        .grid.grid-cols-12
          div(class="col-span-12")
            .login-card.login-dark
              div
                div
                  a.logo(href="index.html")
                    img.max-w-full.h-auto.for-light(src="../assets/images/logo/logo.png" alt="looginpage" )
                    img.max-w-full.h-auto.for-dark(src="../assets/images/logo/logo_dark.png" alt="looginpage" )
                .login-main 
                  form.theme-form
                    h4 Reset Your Password
                    .form-group
                      label.col-form-label Enter Your Mobile Number
                      .grid.grid-cols-12.card-gap
                        div(class="col-span-3 sm:col-span-4")
                          input.form-control.mb-1(type='number', placeholder='+ 91')
                        div(class="col-span-9 sm:col-span-8")
                          input.form-control.mb-1(type='tel', placeholder='000-000-0000')
                        div(class="col-span-12")
                          .text-end
                            button.btn.btn-primary.btn-block.m-t-10.text-white(type='submit') Send
                    div(class="mt-[24px] mb-[24px]")
                      span.reset-password-link
                        | If don't receive OTP?  
                        a.btn-link.font-danger.underline(href='#') Resend
                    .form-group
                      label.col-form-label.pt-0 Enter OTP
                      .grid.grid-cols-3.card-gap
                        div(class="col-auto")
                          input.form-control.text-center.opt-text(type='text', value='00', maxlength='2')
                        div(class="col-auto")
                          input.form-control.text-center.opt-text(type='text', value='00', maxlength='2')
                        div(class="col-auto")
                          input.form-control.text-center.opt-text(type='text', value='00', maxlength='2')
                    h6.mt-4 Create Your Password
                    .form-group
                      label.col-form-label New Password
                      .form-input.relative
                        input.form-control(type='password', name='login[password]', required='' placeholder="*********")
                        .show-hide
                          span.show
                    .form-group
                      label.col-form-label Retype Password
                      input.form-control(type='password', name='login[password]', required='' placeholder="*********")                       
                    .form-group.mb-0 
                      .form-check.flex.gap-1.items-center
                        input#checkbox1.checkbox-primary.form-check-input.custom-checkbox(type='checkbox')
                        label.text-muted.form-check-label(for='checkbox1' class="!mb-0") Remember password
                      button.btn.btn-primary.btn-block.w-full.text-white(type='submit' class="mt-[24px]") Done                          
                    p.text-center(class="mt-[24px] !mb-0") Already have an password?
                      a.ms-2(href="login.html") Sign in
    include ../../components/footer-files