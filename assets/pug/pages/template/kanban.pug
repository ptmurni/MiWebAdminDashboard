- var page_Title = 'Kanban Board';
- var theme_customizer      = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var tooltip               = true;
- var typeahead             = true;
- var typeahead_search      = true;
- var scrollbar             = true;
- var jkanban               = true;

doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.default-wrapper
      include ../../components/header
      // Page Body Start
      .page-body-wrapper.default-menu.default-menu
        include ../../components/sidebar
        .page-body
          .container.w-full
            .page-title
              .grid.grid-cols-12.mx-2.items-center
                div(class="col-span-6 sm:col-span-12")
                  h3 
                    | Kanban Board
                div(class="col-span-6 sm:col-span-12")
                  ol.breadcrumb.flex.gap-2
                    li.breadcrumb-item
                      a(href='index.html')                                        
                        svg.stroke-icon
                          use(href='../assets/svg/icon-sprite.svg#stroke-home')
                    li.breadcrumb-item  Apps
                    li.breadcrumb-item.active  Kanban Board
          // Container-fluid starts
          .container.jkanban-container
            .grid.grid-cols-12.card-gap
              div(class="col-span-12")
                .card
                  .card-header
                    h5 Default Demo
                    p.f-m-light.mt-1 Default settings             
                  .card-body                     
                    #demo1
              div(class="col-span-12")
                .card
                  .card-header
                    h5 Custom Boards
                    p.f-m-light.mt-1 Colors, gutter, click on board&apos;s item and restricting which boards to drag items to                         
                  .card-body                     
                    #demo2
              div(class="col-span-12")
                .card
                  .card-header
                    h5 API
                    p.f-m-light.mt-1 Add item, add board, delete board:                    
                  .card-body                     
                    #demo3
                    .common-f-start
                      button.btn.btn-primary#addDefault.text-white Add &quot;Default&quot; board
                      button.btn.btn-primary#addToDo.text-white Add element in &quot;In Review&quot; Board
                      button.btn.btn-primary#addToDoAtPosition.text-white Add element in &quot;In Review&quot; Board at position 2
                      button.btn.btn-danger#removeBoard.text-white Remove &quot;In Progress&quot; Board
                      button.btn.btn-danger#removeElement.text-white Remove &quot;My Task Test&quot;

              div(class="col-span-12")
                .card.note.p-5
                  | jKanban is Pure agnostic Javascript plugin for Kanban boards for more options please refer 
                  a(href="https://github.com/riktar/jkanban/tree/master?tab=readme-ov-file" target="_blank") github link

          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
