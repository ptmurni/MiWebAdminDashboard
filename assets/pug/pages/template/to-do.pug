- var page_Title = 'To-Do';
- var theme_customizer      = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var scrollbar             = true;
- var custom_todo           = true;
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/taptop
    include ../../components/loader
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      include ../../components/header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          .container.w-full
            .page-title
              .grid.grid-cols-12.mx-2.items-center
                div(class="col-span-6 sm:col-span-12")
                  h3
                    | To-Do
                div(class="col-span-6 sm:col-span-12")
                  ol.breadcrumb.flex.gap-2
                    li.breadcrumb-item
                      a(href='index.html')                                        
                        svg.stroke-icon
                          use(href='../assets/svg/icon-sprite.svg#stroke-home')
                    li.breadcrumb-item Apps
                    li.breadcrumb-item.active To-Do
          // Container-fluid starts
          .container.email-wrap.bookmark-wrap.todo-wrap
            .grid.grid-cols-12.card-gap
              div(class="col-span-3 xxl:col-span-4 xl:col-span-12 box-col-30")
                .email-sidebar.md-sidebar
                  a.btn.btn-primary.email-aside-toggle.md-sidebar-toggle.text-white To Do filter
                  .email-left-aside.md-sidebar-aside
                    .card 
                      .card-body 
                        .email-app-sidebar.left-bookmark.custom-scrollbar
                          .common-flex.items-center
                            .media-size-email
                              img.img-40.rounded-full(src="../assets/images/user/user.png", alt="")
                            .grow 
                              h6 WILLIAM C. JENNINGS
                              p william@jourrapide.com
                          ul.nav.main-menu
                            li.nav-item
                              button.btn-primary.txt-light.block.btn-mail.w-full.flex.items-center
                                i.me-2(data-feather="check-circle") 
                                | To Do List
                            li.nav-item 
                              a(href="#!")
                                span.iconbg.bg-light-primary
                                  i.txt-primary(data-feather="file-plus")
                                span.title.ms-2 All Task
                            li.nav-item
                              a(href="#!")
                                span.iconbg.bg-light-success
                                  i.txt-success(data-feather="check-circle")
                                span.title.ms-2 Completed
                                span.badge.badge-success 3
                            li.nav-item
                              a(href="#!")
                                span.iconbg.bg-light-danger
                                  i.txt-danger(data-feather="cast")
                                span.title.ms-2 Pending
                                span.badge.badge-danger 2
                            li.nav-item
                              a(href="#!")
                                span.iconbg.bg-light-info
                                  i.txt-info(data-feather="activity")
                                span.title.ms-2 In Process
                                span.badge.badge-primary 2
                            li.nav-item
                              a(href="#!")
                                span.iconbg.bg-light-danger
                                  i.txt-danger(data-feather="trash")
                                span.title.ms-2 Trash
              div(class="col-span-9 xxl:col-span-8 xl:col-span-12 box-col-12")
                .card.todo-tasks
                  .card-header
                    .input-group.flex(class="!flex-nowrap")
                      input#new-task-input.form-control.rounded-r-none(type='text' placeholder="write your task...")
                      button#add-task-button.btn.btn-primary.whitespace-nowrap.rounded-l-none(type='button') Add Task
                  .card-body.custom-scrollbar
                    ul#task-list.checkbox-checked
          // Container-fluid ends                    
        include ../../components/footer
    include ../../components/footer-files
