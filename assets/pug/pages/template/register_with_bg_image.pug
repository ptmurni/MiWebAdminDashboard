- var page_Title = 'Register with Bg Image';
- var sidebar               = false;
doctype html
html(lang='en')
  include ../../components/header-files
  body
    // login page start
    .container
      .grid.grid-cols-12
        div(class="col-span-5 xl:col-span-12")
          img.bg-img-cover.bg-center(src="../assets/images/login/3.jpg" alt="looginpage" )
        div(class="col-span-7 xl:col-span-12") 
          .login-card.login-dark
            div
              div
                a.logo(href="index.html" class="!text-start")
                  img.max-w-full.h-auto.for-light(src="../assets/images/logo/logo.png" alt="looginpage" )
                  img.max-w-full.h-auto.for-dark(src="../assets/images/logo/logo_dark.png" alt="looginpage" )
              .login-main.create-account 
                form.theme-form
                  h4 Create your account
                  p Enter your personal details to create account
                  .form-group
                    label.col-form-label.pt-0 Your Name
                    .grid.grid-cols-12.gap-2
                      div(class="col-span-6 sm:col-span-12")
                        input.form-control(type='text', required='' placeholder='First name')
                      div(class="col-span-6 sm:col-span-12")
                        input.form-control(type='text', required='' placeholder='Last name')
                  .form-group
                    label.col-form-label Email Address
                    input.form-control(type='email', required='' placeholder='test@gmail.com')
                  .form-group
                    label.col-form-label Password
                    .form-input.relative
                      input.form-control(type='password', name='login[password]', required='' placeholder="*********")
                      .show-hide
                        span.show
                  .form-group.mb-0
                    .form-check.flex.gap-1
                      input#checkbox1.checkbox-primary.form-check-input.custom-checkbox(type='checkbox')
                      label.text-muted.form-check-label(for='checkbox1' class="!mb-0") I agree to the terms & conditions and 
                        a.ms-2(href="#") Privacy Policy
                    button.btn.btn-primary.btn-block.w-full.text-white(type='submit' class="mt-[6px]") Create Account
                  h6.text-muted.or(class="mt-[24px]") Or create your account with
                  .social(class="mt-[24px]")
                    .btn-showcase
                      a.btn.btn-light.inline-block(href='https://www.linkedin.com/login' target='_blank')
                        i.fa-brands.fa-linkedin-in
                      a.btn.btn-light.inline-block(href='https://twitter.com/login?lang=en' target='_blank')
                        i.fa-brands.fa-x-twitter
                      a.btn.btn-light.inline-block(href='https://www.facebook.com/' target='_blank')
                        i.fa-brands.fa-facebook-f
                      a.btn.btn-light.inline-block(href='https://www.google.com/' target='_blank')
                        i.fa-brands.fa-google
                  p.text-center(class="mt-[24px] !mb-0") Already have an account?
                    a.ms-2(href="login.html") Sign in
      include ../../components/footer-files
