- var page_Title = 'Register with Image Two';
- var sidebar               = false;
doctype html
html(lang='en')
  include ../../components/header-files
  body
    // login page start
    .container
      .grid.grid-cols-12.m-0
        div(class="col-span-7 xl:col-span-12").p-0
          img.bg-img-cover.bg-center(src="../assets/images/login/1.jpg" alt="looginpage" )
        div(class="col-span-5 xl:col-span-12").p-0 
          .login-card.login-dark
            div
              div
                a.logo.text-start(href="index.html")
                  img.max-w-full.h-auto.for-light(src="../assets/images/logo/logo.png" alt="looginpage" )
                  img.max-w-full.h-auto.for-dark(src="../assets/images/logo/logo_dark.png" alt="looginpage" )
              .login-main.create-account
                form.theme-form
                  h4 Create your account
                  p Enter your personal details to create account
                  .form-group
                    label.col-form-label.pt-0 Your Name
                    .grid.grid-cols-12.gap-2
                      div(class="col-span-12")
                        input.form-control(type='text', required='' placeholder='First name')
                      div(class="col-span-12")
                        input.form-control(type='text', required='' placeholder='Last name')
                  .form-group
                    label.col-form-label Email Address
                    input.form-control(type='email', required='' placeholder='test@gmail.com')
                  .form-group
                    label.col-form-label Password
                    .form-input.relative
                      input.form-control(type='password', name='login[password]', required='' placeholder="*********")
                      .show-hide
                        span.show
                  .form-group.mb-0
                    .checkbox.p-0
                      input#checkbox1(type='checkbox')
                      label.text-muted(for='checkbox1') I agree to the terms & conditions and
                        a.ms-2(href="#") Privacy Policy
                    button.btn.btn-primary.btn-block.w-full(type='submit') Create Account
                  h6.text-muted.mt-4.or Or create your account with
                  .social.mt-4
                    .btn-showcase
                      a.btn.btn-light(href='https://www.linkedin.com/login' target='_blank')
                        i.txt-linkedin(data-feather="linkedin")
                        |  LinkedIn 

                      a.btn.btn-light(href='https://twitter.com/login?lang=en' target='_blank')
                        i.txt-twitter(data-feather="twitter")
                        | twitter

                      a.btn.btn-light(href='https://www.facebook.com/' target='_blank')

                        i.txt-fb(data-feather="facebook")
                        | facebook
                  p.mt-4.mb-0.text-center Already have an account?
                    a.ms-2(href="login.html") Sign in
      include ../../components/footer-files
